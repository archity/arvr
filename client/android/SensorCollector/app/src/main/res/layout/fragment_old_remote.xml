<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutOldRemote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OldRemoteFragment">

    <LinearLayout
        android:id="@+id/zerothRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/blankLinearLayout0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/blankLinearLayout01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/escapeLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/escapeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/esc_button" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/blankLinearLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/volumeUpLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/volumeUpButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:rotation="-90"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@android:drawable/ic_media_play"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLinearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/firstRowLinearLayout"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:scaleX="0.8"
        android:scaleY="0.9">

        <LinearLayout
            android:id="@+id/rewindLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/rewindButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_rew"
                app:tint="@color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/okLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:scaleX="0.9"
            android:scaleY="0.9">

            <ImageButton
                android:id="@+id/okButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleY="0.9"
                android:src="@drawable/ok_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fastForwardLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fastForwardButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_ff"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/secondRowLinearLayout"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/blankLinearLayout3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/volumeDownLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/volumeDownButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:rotation="90"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@android:drawable/ic_media_play"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLinearLayout4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/FourthRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/thirdRowLinearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:scaleX="0.8"
        android:scaleY="0.8">

        <LinearLayout
            android:id="@+id/previousLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_previous"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@android:drawable/ic_media_play"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pauseLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_pause"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nextLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:tint="@android:color/holo_blue_light"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FifthRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/FourthRowLinearLayout"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:scaleX="0.8"
        android:scaleY="0.8">

        <LinearLayout
            android:id="@+id/blankLinearLayout9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/muteButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@android:drawable/ic_lock_silent_mode"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stopLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/stopButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.55"
                android:scaleY="0.65"
                android:src="@android:drawable/title_bar"
                app:tint="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLinearLayout10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/orangeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_orangecircle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLinearLayout12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/greenButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_greencircle" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

