<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton" />

    <EditText
        android:id="@+id/Edit_Port_Box"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Edit_Port"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/Default_Port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Port" />

    <TextView
        android:id="@+id/Edit_Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit_Address_Box"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="2dp"
        android:text="@string/Edit_Port"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Port_Box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Address_Box" />

    <EditText
        android:id="@+id/Edit_Address_Box"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@id/Edit_IP_Adress"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:singleLine="true"
        android:text="@string/Default_IP_Adress"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_IP_Adress">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/Edit_IP_Adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="2dp"
        android:text="@string/Edit_Target_Adress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Address_Box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="252dp"
        android:text="ToggleButton"
        android:textOn="Streaming"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Port_Box" />

</androidx.constraintlayout.widget.ConstraintLayout>